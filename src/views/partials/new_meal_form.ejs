<form id="newMealForm">
  <div class="form-group">
    <label for="mealName">Name</label>
    <input name="name" type="text" class="form-control" id="mealName" placeholder="New Meal">
  </div>
  <div class="form-group">
    <label for="mealDescription">Meal Description</label>
    <textarea name="description" class="form-control" id="mealDescription" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label>Images</label>
    <small id="fileHelp" class="form-text text-muted">You can attach an image to your meal if you like. Scanning a recipe and attaching it will help with preperation. 
    </small>
    <% include file-uploader %>
  </div>

  <div class="form-group">
    <label for="mealType">Meal Type</label>
    <select name="type" class="form-control" id="mealType">
      <!-- options populated by js -->
    </select>
  </div>

  <div class="form-group" id="meal-difficulty-group">
    <label for="mealDifficulty">Difficulty</label>
    <select name="difficulty" class="form-control" id="mealDifficulty">
      <!-- options populated by js -->
    </select>
  </div>

  <div class="form-group" id="perferred-sides-group">
    <label for="perferredSides">Perferred Sides</label>
    <select multiple name="perferredSides" class="form-control" id="perferredSides">
      <!-- options populated by js -->
    </select>
  </div>
  
  <div class="form-group" id="number-of-sides-group">
    <label for="numberOfSides">Number of Sides</label>
    <select name="numberOfSides" class="form-control" id="numberOfSides">
      <option>1</option>
      <option>2</option>
      <option>3</option>
    </select>
  </div>
 
  <div class="form-group" id="perferred-days-group">
    <label for="perferredDays">Perferred Days</label>
    <select multiple name="perferredDays" class="form-control" id="perferredDays">
      <!-- options populated by js -->
    </select>
  </div>

  <div class="form-check">
    <label class="form-check-label">
      <input type="checkbox" name="inFreezer" class="form-check-input" id="freezerCheck">
      Currently in freezer
    </label>
  </div>
  <br />
  <button id="mealFormSubmitButton" type="submit" class="btn btn-primary">Submit</button>

  <% if (showCancelButton) { %>
  <button id="mealCancelButton" type="reset" class="btn btn-secondary">Cancel</button>
  <% } %>
</form>
